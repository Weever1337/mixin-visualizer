<idea-plugin>
    <id>dev.wvr.mixinvisualizer</id>
    <name>Mixin Visualizer</name>
    <vendor email="weever1337@gmail.com" url="https://weever.my">Weever</vendor>

    <description><![CDATA[
    IntelliJ IDEA plugin for visualizing Mixin injections in real-time using a side-by-side view
    ]]></description>


    <depends>com.intellij.java</depends>
    <depends>org.jetbrains.kotlin</depends>
    <depends>ByteCodeViewer</depends>
    <depends>org.jetbrains.idea.maven</depends>
    <depends>com.intellij.gradle</depends>
    <depends>org.intellij.groovy</depends>
    <depends>com.demonwav.minecraft-dev</depends>

    <extensions defaultExtensionNs="com.intellij">
        <fileEditorProvider implementation="dev.wvr.mixinvisualizer.ui.MixinPreviewFileEditorProvider"/>
        <codeInsight.lineMarkerProvider language="JAVA" implementationClass="dev.wvr.mixinvisualizer.ui.MixinLineMarkerProvider"/>

        <fileType name="JVM Bytecode" implementationClass="dev.wvr.mixinvisualizer.lang.BytecodeFileType" fieldName="INSTANCE" language="JVM Bytecode" extensions="jvm"/>
        <lang.syntaxHighlighterFactory language="JVM Bytecode" implementationClass="dev.wvr.mixinvisualizer.lang.BytecodeSyntaxHighlighterFactory"/>


        <applicationService serviceImplementation="dev.wvr.mixinvisualizer.settings.MixinVisualizerSettings"/>
        <applicationConfigurable instance="dev.wvr.mixinvisualizer.settings.MixinVisualizerConfigurable"
                                 id="dev.wvr.mixinvisualizer.settings.MixinVisualizerConfigurable"
                                 displayName="Mixin Visualizer"/>

        <fileDocumentManagerListener implementation="dev.wvr.mixinvisualizer.logic.AutoCompileListener"/>
    </extensions>
</idea-plugin>